        - name: POOL_MODE
          value: transaction
        - name: SERVER_RESET_QUERY
          value: DISCARD ALL
        - name: AUTH_TYPE
          value: plain
        image: {{ .Values.image.imageRegistry }}/edoburu/pgbouncer:v1.18.0
        lifecycle:
          preStop:
            exec:
              command:
              - /bin/sh
