                    values:
                    - kubegres
      tolerations:
       - key: "pod"
         operator: "Equal"
         value: "kubegres"
         effect: "NoSchedule"
       - key: "pod"
         operator: "Equal"
         value: "kubegres"
         effect: "NoExecute"

